<!--
    EJS Templates and Layouts
    Created first template and layout
-->
<%- include("header")-%>

        <div class="box" id="heading">
            <!-- adding an ejs marker -> <%= %> -->
            <h1><%=listTitle%></h1>
        </div>

        <div class="box">
            <!-- control flow using the scriptlet tag (ejs) -->
            <%newListItems.forEach( function(item) {%>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%=item._id%>"
                        onchange="this.form.submit()">
                        <p><%=item.item%></p>
                    </div>
                    <input type="hidden" name="listName" value="<%=listTitle%>"></input>
                </form>
            <%});%>

            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="Enter your task here" autocomplete="off">
                <button type="submit" name="list" value= <%= listTitle %>>+</button>
            </form>
        </div>

<%- include("footer")-%>
